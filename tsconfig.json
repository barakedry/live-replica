{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmitOnError": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@live-replica/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/events" },
    { "path": "./packages/utils" },
    { "path": "./packages/proxy" },
    { "path": "./packages/patch-diff" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js",
    "jest.config.js",
    "packages/**/*.js"
  ]
} 